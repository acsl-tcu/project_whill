# CompilerName=msvcpp160
# Mode=debug
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root\build\win64
matlabdir = C:\Program Files\MATLAB\R2021b
startdir = C:\Users\3\OneDrive - tcu.ac.jp\jikki0914\program

# Toolchain information
cc = cl
cxx = cl
linker = link
linkerxx = link

cflags =  /c /Zc:__cplusplus /Zp8 /GR /W3 /EHs /nologo /MD /D_CRT_SECURE_NO_DEPRECATE /D_SCL_SECURE_NO_DEPRECATE /D_SECURE_SCL=0   /DMATLAB_MEX_FILE  /DMATLAB_MEX_FILE /Z7 /FS /source-charset:utf-8 /I "$root" /I "$startdir" /I "$root\interface" /I "$matlabdir\extern\include" /I "." -DMW_CUDA_ARCH=350 -DMODEL=EvaluationPath_GPU_mex -DMW_NEEDS_VERSION_H  

cxxflags =   /c /Zc:__cplusplus /Zp8 /GR /W3 /EHs /nologo /MD /D_CRT_SECURE_NO_DEPRECATE /D_SCL_SECURE_NO_DEPRECATE /D_SECURE_SCL=0   /DMATLAB_MEX_FILE  /DMATLAB_MEX_FILE /Z7 /FS /source-charset:utf-8 /I "$root" /I "$startdir" /I "$root\interface" /I "$matlabdir\extern\include" /I "." -DMW_CUDA_ARCH=350 -DMODEL=EvaluationPath_GPU_mex -DMW_NEEDS_VERSION_H  

ldflags =  -Xlinker /nologo -Xlinker /manifest -Xlinker /DLL -L"$matlabdir\extern\lib\win64\microsoft" libmx.lib libmex.lib libmat.lib kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib odbccp32.lib libMatlabDataArray.lib libMatlabEngine.lib -Xlinker /debug -Xlinker /PDB:"EvaluationPath_GPU_mex.mexw64.pdb" libemlrt.lib libcovrt.lib libut.lib libmwmathutil.lib -arch sm_35  -L"C:\Program Files\NVIDIA GPU Computing Toolkit\CUDA\v11.5\lib\x64" cudart.lib cublas.lib cusolver.lib cufft.lib curand.lib -Xnvlink -w  -Wno-deprecated-gpu-targets -Xlinker /NODEFAULTLIB:libcmt.lib

# Build Rules
rule cc
    command = $cc $cflags $in /Fo$out

rule cxx
    command = $cxx $cxxflags $in /Fo$out

rule link
    command = $linker @$out.rsp $ldflags
    rspfile = $out.rsp
    rspfile_content = $in

rule linkxx
    command = $linkerxx $in $ldflags

cudac = nvcc
linkercuda = nvcc

cudaflags =  -c -rdc=true -Wno-deprecated-gpu-targets -Xcompiler "/wd 4819" -Xcompiler "/MD" -Xcudafe "--display_error_number --diag_suppress=2381 --diag_suppress=unsigned_compare_with_zero --diag_suppress=useless_type_qualifier_on_return_type" -D_GNU_SOURCE -DMATLAB_MEX_FILE -g -G -O0 -Xcompiler "/FS" -Xcompiler "/source-charset:utf-8" -I "$root" -I "$startdir" -I "$root\interface" -I "$matlabdir\extern\include" -I "." -DMW_CUDA_ARCH=350 -DMODEL=EvaluationPath_GPU_mex -DMW_NEEDS_VERSION_H  -arch sm_35  -I "$matlabdir/simulink/include" -I "$matlabdir/toolbox/shared/simtargets"
rule cudac
    command = $cudac $cudaflags $in -o $out

rule linkcuda
    command = $linkercuda $ldflags -o $out $in

# Build
build $builddir\EvaluationPath_GPU_data.obj : cudac $root\EvaluationPath_GPU_data.cu
build $builddir\rt_nonfinite.obj : cudac $root\rt_nonfinite.cu
build $builddir\EvaluationPath_GPU_initialize.obj : cudac $root\EvaluationPath_GPU_initialize.cu
build $builddir\EvaluationPath_GPU_terminate.obj : cudac $root\EvaluationPath_GPU_terminate.cu
build $builddir\EvaluationPath_GPU.obj : cudac $root\EvaluationPath_GPU.cu
build $builddir\_coder_EvaluationPath_GPU_api.obj : cudac $root\interface\_coder_EvaluationPath_GPU_api.cu
build $builddir\_coder_EvaluationPath_GPU_mex.obj : cudac $root\interface\_coder_EvaluationPath_GPU_mex.cu
build $builddir\EvaluationPath_GPU_emxutil.obj : cudac $root\EvaluationPath_GPU_emxutil.cu
build $builddir\_coder_EvaluationPath_GPU_info.obj : cxx $root\interface\_coder_EvaluationPath_GPU_info.cpp
build $builddir\cpp_mexapi_version.obj : cudac $root\cpp_mexapi_version.cpp

# Link
build $root\EvaluationPath_GPU_mex.mexw64 : linkcuda $builddir\EvaluationPath_GPU_data.obj $builddir\rt_nonfinite.obj $builddir\EvaluationPath_GPU_initialize.obj $builddir\EvaluationPath_GPU_terminate.obj $builddir\EvaluationPath_GPU.obj $builddir\_coder_EvaluationPath_GPU_api.obj $builddir\_coder_EvaluationPath_GPU_mex.obj $builddir\EvaluationPath_GPU_emxutil.obj $builddir\_coder_EvaluationPath_GPU_info.obj $builddir\cpp_mexapi_version.obj 
